# REQUIRED CONFIGURATION - NO DEFAULTS ALLOWED
# Copy this file to .env and fill in all values

# Server Configuration (REQUIRED)
PORT=3001
NODE_ENV=development

# Application Version (REQUIRED)
APP_VERSION=1.0.0

# Ngrok Configuration (REQUIRED for redirect server)
NGROK_URL=https://vigorously-loving-pug.ngrok-free.app

# Render Configuration (REQUIRED)
RENDER_URL=https://recom-mqxd.onrender.com

# Ecwid Configuration (REQUIRED)
ECWID_CLIENT_ID=your_client_id_here
ECWID_CLIENT_SECRET=your_client_secret_here
ECWID_STORE_ID=your_store_id_here

# OAuth Configuration (REQUIRED for OAuth flow)
ECWID_REDIRECT_URI=https://your-app.com/auth/callback
ECWID_SCOPES=read_catalog,read_orders,read_store_profile,update_catalog


# Database Configuration (REQUIRED)
DB_PATH=./data/ecwid_plugin.db

# CORS Configuration (REQUIRED)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://vigorously-loving-pug.ngrok-free.app,https://recom-mqxd.onrender.com

# Rate Limiting (REQUIRED)
RATE_LIMIT_WINDOW_MS=1000
RATE_LIMIT_MAX_REQUESTS=10

# Logging (REQUIRED)
LOG_LEVEL=combined

# Custom URLs (REQUIRED - from your project config)
CUSTOM_JS_URL=https://ec.1nax.app/ec.js
CUSTOM_CSS_URL=https://ec.1nax.app/ec.css
